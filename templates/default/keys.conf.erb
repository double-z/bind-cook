<% @keys.each do |key, data| %> 
key "<%= key %>" {
  algorithm <%= data["algo"] %>;
  secret <%= data["secret"] %>;
};
<% end %>


controls {
  inet * port 953 allow {any;} keys { <%= Helpers::Dns.match_list(@keys) %> };
  inet * port 54  allow {any;} keys { <%= Helpers::Dns.match_list(@keys) %> };
};

